{
  "private": true,
  "version": "0.0.1",
  "description": "Collaborative cloud documentation for heterocube teams",
  "scripts": {
    "prepare": "husky install",
    "dev": "NODE_ENV=development turbo run dev",
    "build": "turbo run build",
    "build:app": "turbo run build && pnpm --filter @hetero/doc-web-app build:app",
    "cypress": "pnpm --filter @hetero/doc-web-app cypress",
    "cypress:component": "turbo run build && pnpm --filter @hetero/doc-web-app cypress:component",
    "cypress:component-video": "turbo run build && pnpm --filter @hetero/doc-web-app cypress:component-video"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.24.2",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/node": "^18.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.16.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "turbo": "^1.6.3",
    "typescript": "^4.7.4",
    "vite": "^4.1.4"
  },
  "lint-staged": {
    "*.vue": "eslint --fix",
    "*.ts": "eslint --fix",
    "*.js": "eslint --fix"
  },
  "keywords": [
    "wiki",
    "knowledge-management",
    "documentation"
  ],
  "author": "ShenQingchuan",
  "license": "MIT"
}
