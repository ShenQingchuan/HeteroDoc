{
  "name": "@hetero/editor",
  "version": "0.0.1",
  "description": "A WYSIWYG editor for heterocube doc",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development && rm -rf ./dist && concurrently 'npm:dev-tsup' 'npm:dev-dts'",
    "dev-tsup": "tsup --watch",
    "dev-dts": "tsc -w --emitDeclarationOnly --declaration --preserveWatchOutput",
    "build": "cross-env NODE_ENV=production && rm -rf ./dist && concurrently 'npm:build-tsup' 'npm:build-dts'",
    "build-tsup": "tsup",
    "build-dts": "tsc --emitDeclarationOnly --declaration"
  },
  "dependencies": {
    "@hetero/shared": "workspace:*",
    "highlight.js": "^11.6.0",
    "lodash": "^4.17.21",
    "prosemirror-commands": "^1.3.0",
    "prosemirror-highlightjs": "^0.9.1",
    "prosemirror-history": "^1.3.0",
    "prosemirror-keymap": "^1.2.0",
    "prosemirror-model": "^1.18.1",
    "prosemirror-state": "^1.4.0",
    "prosemirror-tables": "^1.2.5",
    "prosemirror-transform": "^1.6.0",
    "prosemirror-utils": "^0.9.6",
    "prosemirror-view": "^1.26.0",
    "y-prosemirror": "^1.1.2",
    "y-protocols": "^1.0.5",
    "y-websocket": "^1.4.3",
    "yjs": "^13.5.38"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.182",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "esbuild-plugin-less": "^1.1.11",
    "tsup": "^6.5.0",
    "typescript": "^4.7.4"
  },
  "keywords": [
    "WYSIWYG",
    "editor"
  ],
  "author": "ShenQingchuan",
  "license": "MIT"
}
